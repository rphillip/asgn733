
<%= form_for([@todolist, @todoitem]) do |f| %>
 
  <div class="field">
    <%= f.label :task_title %><br>
    <%= f.text_field :task_title %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.text_field :due_date, class: 'date_in' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
