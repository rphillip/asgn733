<div id="todoitem">


       <%if todoitem.done %>
        <span class="check"><%= "#{todoitem.due_date}"%></span>
	<span class="todoitem_title"><%= link_to "#{todoitem.task_title}", todolist_todoitem_path(@todolist, todoitem) %></span>
		
	<%else%>
	    <span class="nocheck"><%= "#{todoitem.due_date}"%></span>
	    <span class="todoitem_title" id="inline"><%= link_to "#{todoitem.task_title}", todolist_todoitem_path(@todolist, todoitem) %></span>
	    <%= f.fields_for :todoitem do |g| %>
	    <%= g.hidden_field :done, value: true %>
	    <%end%><%= f.submit "Mark as done"%>
	
      
  <div>
    <br/>
  </div>
  </div>
